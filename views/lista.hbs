<style>
    .table td, .table th {
        vertical-align: middle;
    }
    h1 {
        color: blue;
    }
    hr {
        background-color: #ddd;
    }
    .jumbotron {
        min-height: 100vh;
    }
</style>

<div class="jumbotron">
    <h1>Vista de Productos</h1>
    <br>

    {{#if hayProductos.length}} 
        <div class="table-responsive">
            <table class="table table-dark">
                <tr> 
                    <th>Producto</th> 
                    <th>Precio</th> 
                    <th>Sotck</th> 
                    <th>Foto</th> 
                    <th>Fecha</th>
                    <th>Editar</th>
                    <th>Borrar</th>
                </tr>
                {{#each hayProductos}}
                    <tr> <td>{{this.name}}</td>
                         <td>$ {{this.price}}</td>
                         <td>{{this.sotck}}</td>
                         <td><img width="50" src={{this.thumbnail}} alt="not found"></td>
                         <td>{{this.timestamp}}</td>
                         <td>
                             <button type="submit" class="btn btn-primary mt-3">Editar</button>
                         </td>
                         <td>
                             <button type="submit" class="btn btn-warning mt-3">Borrar</button>
                         </td>
                    </tr>
                {{/each}}
            </table>
        </div>
    {{else}}  
        <h3 class="alert alert-warning">No se encontraron productos</h3>
    {{/if}}
    <a href="/" class="btn btn-info m-3">Volver</a>
</div>


